def star(n):
    '''input: n = An Integer value defines number of rows
       output: print the star pattern'''
    # YOUR CODE GOES HERE
    for i in range(n,0,-1):
        if i == n:
            print("*"* n)
        elif  2 < i <n:
            
            print("*",end="")
            print(" " * (i-2),end="")
            print("*")
        elif i==2:
           print("**")
        else:
            print("*")

